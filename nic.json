{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "defaultValue":"testVm"
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "testvnet"
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "default"
        },
        "publicIpAddressName": {
            "type": "string",
            "defaultValue": "test-vm-ip"
        }
        //"subnetid": {
        //    "type": "string",
        //    "defaultValue": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
        //}
    },
    "functions": [],
    "variables": {
       // "subnetid": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName')), '/subnets/', parameters('subnetName'))]"
       // "subnetid": "[reference(concat(resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName')), '/subnets/', parameters('subnetName')), '2020-11-01')]"

    },
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vmName'), '-nic')]",
            "location":"[resourceGroup().location]",
            "dependsOn": [
                //"[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
                //"[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', parameters('publicIpAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig",
                        "properties":{
                            "subnet": {
                                //"id": "[resourceId(resourceGroup().name, 'Microsoft.Resources/deployments', 'VmTemplate').outputs.subnetRef.value]"
                                //"id":"[reference(resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName')), '/subnets/', parameters('subnetName')).outputs.subnetRef.value]"
                               // "id":"[reference(resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))).outputs.subnetRef.value]"
                               // "id": "[reference(resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks',parameters('virtualNetworkName')), '2020-11-01').outputs.subnetRef.value]"
                               "id":"[reference(resourceId(resourceGroup().name, 'Microsoft.Resources/deployments', 'vnetTemplate'), '2021-04-01').outputs.subnetRef.value]" 
                              // "id": "/subscriptions/8dcf5406-1ef3-45a7-a85d-67d3dde5d189/resourceGroups/devops/providers/Microsoft.Network/virtualNetworks/testvnet/subnets/default" 
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                //"id": "[resourceId(resourceGroup().name, 'Microsoft.Resources/deployments', 'publicIp').outputs.publicIpAddress.value]"
                                //"id":"[reference(resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', parameters('publicIpAddressName')), '2020-08-01').outputs.publicIpAddress.value]"
                                //"id": "/subscriptions/8dcf5406-1ef3-45a7-a85d-67d3dde5d189/resourceGroups/devops/providers/Microsoft.Network/publicIpAddresses/test-vm-ip"
                                "id": "[reference(resourceId(resourceGroup().name, 'Microsoft.Resources/deployments', 'publicIpTemplate'), '2022-09-01').outputs.publicIpAddress.value]"
                            }
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "nicId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), '-nic'))]"
        }
    }
}